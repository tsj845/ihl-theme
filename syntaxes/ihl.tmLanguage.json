{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ihl",
	"patterns": [
        {"include": "#options"},
		{"include": "#main"}
	],
	"repository": {
		"main": {
			"patterns": [
				{"include": "#keywords"},
				{"include": "#strings"},
				{"include": "#comments"},
				{"include": "#numbers"},
                {"include": "#operators"},
                {"include": "#dollar"},
                {"include": "#debug"},
				{"include": "#halter"}
			]
		},
		"halter": {
			"name": "halter.ihl",
			"match": "\\b(HALT)\\b"
		},
        "options": {
            "name": "meta.tag.ihl",
            "begin": "^#\\[",
            "end": "]$",
            "patterns": [
                {
                    "name": "meta.tag.escaped.ihl",
                    "match": ".*(?=])"
                },
                {"include": "#main"}
            ]
        },
        "dollar": {
            "name": "dollar.ihl",
            "match": "\\$(?={|\\[)"
        },
		"keywords": {
			"name": "keyword.control.ihl",
			"match": "\\b(print|of|global|local|func|rm|garbage|return)\\b"
		},
        "debug": {
            "name": "keyword.debug.ihl",
            "match": "\\b(dumpscope|log)\\b"
        },
        "operators": {
            "name": "operator.math.ihl",
            "match": "-|\\+|\\*|/|="
        },
		"strings": {
			"name": "string.quoted.double.ihl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ihl",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.ihl",
			"match": "//.*$"
		},
		"numbers": {
			"name": "constant.numeric.ihl",
			"match": "((?<![a-zA-Z_])[0-9]+(\\.[0-9]+)?)(?![a-zA-Z])"
        }
	},
	"scopeName": "source.ihl"
}