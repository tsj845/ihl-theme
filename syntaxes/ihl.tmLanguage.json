{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ihl",
	"patterns": [
        {"include": "#options"},
		{"include": "#main"}
	],
	"repository": {
		"main": {
			"patterns": [
				{"include": "#keywords"},
				{"include": "#strings"},
				{"include": "#comments"},
				{"include": "#numbers"},
                {"include": "#operators"},
                {"include": "#dollar"},
                {"include": "#debug"},
				{"include": "#literals"},
				{"include": "#error"}
			]
		},
		"error": {
			"name": "error.ihl",
			"match": "\\b(HALT)\\b"
		},
        "options": {
            "name": "meta.tag.ihl",
            "begin": "^#\\[",
            "end": "]$",
            "patterns": [
                {
                    "name": "meta.tag.escaped.ihl",
                    "match": ".*(?=])"
                },
                {"include": "#main"}
            ]
        },
        "dollar": {
            "name": "dollar.ihl",
            "match": "\\$(?={|\\[|\\w)"
        },
		"keywords": {
			"name": "keyword.control.ihl",
			"match": "\\b(print|global|local|func|rm|garbage|return|for|while|if|else|linkup|module|parent|unique|readonly|private|class|in)\\b"
		},
        "debug": {
            "name": "keyword.debug.ihl",
            "match": "\\b(dumpscope|dumptoks|log|dumpflags|dumplc)\\b"
        },
        "operators": {
            "name": "operator.math.ihl",
            "match": "[-+*/=|&^%!<>]"
        },
		"strings": {
			"name": "string.quoted.double.ihl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ihl",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.ihl",
			"match": "//.*$"
		},
		"numbers": {
			"name": "constant.numeric.ihl",
			"match": "((?<![a-zA-Z_])[0-9]+(\\.[0-9]+)?)(?![a-zA-Z])"
        },
		"literals": {
			"name": "constant.other.ihl",
			"match": "\\b(true|false|null)\\b"
		}
	},
	"scopeName": "source.ihl"
}